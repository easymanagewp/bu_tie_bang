extends layout.jade

block content
    link(rel='stylesheet', href='/stylesheets/wechat.css')
    div: em 【腾讯·大秦家居】<br>&nbsp;补贴帮《装修抢补贴》报名入口
    .all
        div
            img(src=userInfo.headimgurl,width="32",height="32")
            span=userInfo.nickname
        div: input(placeholder="请输入手机号码",name="mobile")
        div
            input(name="openid",type="hidden",value=userInfo.openid)#openid
            input(name="validate_code",placeholder="短信验证码",style="width:58%")
            a(href="javascript:void(0)")#get_validatecode_btn.test='获取验证码'
    .submit-btn#submit_btn='立即报名'
    script(src="/javascripts/registration.js")